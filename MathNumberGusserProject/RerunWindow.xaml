<Window x:Class="MathNumberGusserProject.RerunWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathNumberGusserProject"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="RerunWindow" Height="300" Width="600">
    <StackPanel >

        <TextBlock Margin="50" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Grid.RowSpan="2" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="resultbox" > </TextBlock>
        <TextBlock Margin="10"> click ok to run the game again or click cancel to exit</TextBlock>
        <Button Margin="10" Click="rerun">ok</Button>
        <Button Margin="10" Click="close">cancel</Button>
    </StackPanel>
</Window>
